<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Cost</th>
      <th>Containers needed</th>
      <th>Boat</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.description %></td>
        <td><%= job.cost %></td>
        <td><%= job.containers_needed %></td>
        <td><%= job.boat_id %></td>
        <td><%= job.user_id %></td>
        <td><%= link_to 'Details', job %>
        <%= link_to 'Edit', edit_job_path(job) %>
        <%= link_to 'Delete', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
