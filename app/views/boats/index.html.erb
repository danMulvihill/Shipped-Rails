<p id="notice"><%= notice %></p>

<h1>Boats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Max containers</th>
      <th>Location</th>
      <th>Description</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boats.each do |boat| %>
      <tr>
        <td><%= boat.name %></td>
        <td><%= boat.max_containers %></td>
        <td><%= boat.location %></td>
        <td><%= boat.description %></td>
        <td><%= boat.contact %></td>
        <td><%= link_to 'Show', boat, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_boat_path(boat), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', boat, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

